
<div class="card border-primary mb-3 shadow-lg p-3 mb-5 bg-white rounded mt-3" style="height: 400px; width: 300px; margin-left: 350px;background-color: beige;">
    <div style="margin-left: 100px;margin-top: 30px;">
        <h3>login</h3>
    </div>
    <form style="margin-top: 50px; margin: auto;" action="/user/login" method="POST">
      <div class="form-group">
    <label for="exampleInputEmail1">Email: </label>
    <input type="email" class="form-control" name="email" placeholder="Digite seu E-mail" style="background-color: blanchedalmond;" required>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Senha: </label>
    <input type="password" class="form-control" name="password" placeholder="Digite sua senha" style="background-color: blanchedalmond;" required>
  </div>

  {{#if error}}
    <div class="alert alert-danger mt-2">{{error}}</div>
  {{/if}}
  <button type="submit" class="btn btn-success mt-2">Login</button>
  <a href="/user/cadastro">
    <button type="button" class="btn btn-primary mt-2" style="margin-left: 60px;">Cadastre-se</button>
  </a>

</form>
</div>