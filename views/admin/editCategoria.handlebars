<div class="card">
<div class="card-body">
    <h2>Ediatar Categoria</h2>
</div>
<div class="card-body">
    <form method="POST" action="/admin/categoria/edition/{{CategoriaId.id}}">
    <label for="name">Nome:</label>
        <input type="text" name="name" id="name" class="form-control" value={{CategoriaId.name}}>
    <label for="slug">Slag: </label>
        <input type="text" name="slug" id="slug" class="form-control" value={{CategoriaId.slug}}>
    <button type="submit" class="btn btn-primary mt-3">Editar Categoria</button>
    </form>
</div>
</div>


{{#each erros}}
  <div class="alert alert-danger mt-3">{{texto}}</div>
{{/each}}
